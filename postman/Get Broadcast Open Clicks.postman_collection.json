		{
			"name": "Get Lists on Account",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "4d22c8fa-8695-4098-a275-10658e8aaea5",
						"exec": [
							"pm.test(\"Successfully got an listId\", function() {",
							"    var jsonData = pm.response.json();",
							"    if (typeof jsonData.total_size == 'number' ) {",
							"        var listId = Math.floor((Math.random() * jsonData.total_size ))",
							"        pm.globals.set(\"listId\",jsonData.entries[listId].id) ",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
