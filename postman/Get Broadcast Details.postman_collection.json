						"id": "5d0f8297-d924-4b24-b51f-f2c4af5ffd5f",
						"exec": [
							"pm.test(\"Successfully got an accountId\", function() {",
							"    var jsonData = pm.response.json();",
							"    if (typeof jsonData.entries[0].id == 'number' ) {",
							"        pm.globals.set(\"accountId\",jsonData.entries[0].id )",
							"    }",
							"});"
						],
