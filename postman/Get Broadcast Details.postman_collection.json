						"exec": [
							"var jsonData = pm.response.json();",
							"",
							"pm.test(\"Successfully selected a random listId\", function() {",
							"        var list_entry = Math.floor((Math.random() * jsonData.entries.length ));",
							"        pm.globals.set(\"listId\",jsonData.entries[list_entry].id );",
