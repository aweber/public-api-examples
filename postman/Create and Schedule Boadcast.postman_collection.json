	"item": [
		{
			"name": "Get Account",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "74e7dce1-167a-4675-8431-bdf2223fcd25",
						"exec": [
							"var jsonData = pm.response.json();",
							"    ",
							"pm.test(\"Successfully submitted request\", function(){",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"At least one account found\", function () {",
							"    pm.expect(jsonData.total_size).to.be.above(0);",
							"    pm.globals.set(\"accountId\",jsonData.entries[0].id )",
							"    console.log(\"Account ID: \", pm.variables.get(\"accountId\"))",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": ""
				},
				"url": {
					"raw": "https://api.aweber.com/1.0/accounts",
					"protocol": "https",
					"host": [
						"api",
						"aweber",
						"com"
					],
					"path": [
						"1.0",
						"accounts"
					]
				}
			},
			"response": []
		},
		{
