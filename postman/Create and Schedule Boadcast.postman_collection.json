							"pm.test(\"Successfully submitted request\", function(){",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"At least one list found\", function() {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.total_size).to.be.above(0);",
							"    var listId = Math.floor((Math.random() * jsonData.total_size ));",
							"    pm.globals.set(\"listId\",jsonData.entries[listId].id );",
							"});"
						],
						"type": "text/javascript"
					}
				}
