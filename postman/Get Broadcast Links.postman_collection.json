						"exec": [
							"var jsonData = pm.response.json();",
							"",
							"pm.test('Sucessfully retrieved links for broadcast', function(){",
							"   pm.expect(jsonData.resource_type_link).to.eql('https://api.aweber.com/1.0/#link-page-resource');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
